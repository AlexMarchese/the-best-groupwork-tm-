#to shuffle the deck
    
import random

def shuffle(deck):
    shuffeldDeck = random.shuffle(deck)
    return deck

shuffledDeck = shuffle(deck)
print (shuffledDeck)


# to draw a card from the deck

def drawCard(deck):
    card = deck.pop()    #takes last element of list and removes it (default)
    return card

myDrawnCard = drawCard(deck)
print(myDrawnCard)
